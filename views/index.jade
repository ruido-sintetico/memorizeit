extends ./layout.jade
block title
    title #{head.title} | #{head.siteName} - #{head.slogan}
    link(rel="stylesheet", href="/styles/index.css")
block metarobots
    meta(name="robots", content="follow, index")
block content
    h3= content.header
    case lang
        when "ru"
            include ./includes/indexContentRu.jade
        when "en"
            include ./includes/indexContentEn.jade
        default
            include ./includes/indexContentEn.jade
